@model IEnumerable<EntityFramework.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td class="d-f">
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="PencilFill" width="16" height="16" aria-label="Editar"></svg>
                    </a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="CardList" width="16" height="16" aria-label="Detalhes"></svg>
                    </a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ClienteId">
                        <svg bootstrap-icon="Trash" width="16" height="16" aria-label="Excluir"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
